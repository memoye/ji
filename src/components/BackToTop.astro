<button
  id="backToTop"
  class="fixed bottom-8 right-8 z-40 p-2 rounded-full bg-white shadow-lg ring-1 ring-gray-900/5 opacity-0 translate-y-full transition-all duration-300 hover:bg-gray-50"
  aria-label="Back to top"
>
  <svg
    class="w-5 h-5 text-gray-700"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  const backToTopButton = document.getElementById("backToTop");
  const hero = document.querySelector('section[aria-label="Introduction"]');

  if (backToTopButton && hero) {
    const observer = new IntersectionObserver(
      ([entry]) => {
        backToTopButton.classList.toggle("opacity-0", entry.isIntersecting);
        backToTopButton.classList.toggle(
          "translate-y-full",
          entry.isIntersecting
        );
      },
      { threshold: 0 }
    );

    observer.observe(hero);

    backToTopButton.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
</script>
