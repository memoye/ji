---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Instagram",
    url: "https://instagram.com/jessicaiwuala",
    icon: "/icons/ig.png",
  },
  {
    name: "TikTok",
    url: "https://tiktok.com/@jessicaiwuala",
    icon: "/icons/tt.png",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/jessicaiwuala",
    icon: "/icons/in.png",
  },
  {
    name: "X (Twitter)",
    url: "https://x.com/jessicaiwuala",
    icon: "/icons/x.png",
  },
];
---

<footer class="mt-auto bg-gray-50">
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <!-- Top Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-8">
      <!-- Brand Section -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900">Jessica Iwuala</h3>
        <p class="text-sm text-gray-600 max-w-xs">
          Digital Creator and Model passionate about creating authentic content
          that resonates and inspires.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="#about"
              class="text-sm text-gray-600 hover:text-pink-500 transition-colors"
              >About</a
            >
          </li>
          <li>
            <a
              href="#portfolio"
              class="text-sm text-gray-600 hover:text-pink-500 transition-colors"
              >Portfolio</a
            >
          </li>
          <li>
            <a
              href="/resume.pdf"
              class="text-sm text-gray-600 hover:text-pink-500 transition-colors"
              download
            >
              Resume
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold text-gray-900">Connect</h3>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                class="group transition-transform hover:scale-110"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">{link.name}</span>
                <img
                  class="size-6 w-auto opacity-75 transition-opacity group-hover:opacity-100"
                  src={link.icon}
                  alt={`${link.name} icon`}
                />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-200 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-600">
          &copy; {currentYear} Jessica Iwuala. All rights reserved.
        </p>
        <p class="text-xs text-gray-500">
          Made with ❤️ by{" "}
          <a
            href="https://github.com/memoye"
            class="font-medium text-gray-700 hover:text-pink-500 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            Me
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
